<html>
<body>
<h1>Address Book</h1>
	<div class="nav">
		<%= link_to 'Add New Contact', new_contact_path %>
	</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  


    <% @contacts.each do |contact| %>
        <tr><td class="name"><%= contact.first_name %>
        <%= contact.last_name %></td></tr>
        <tr><td class="info"><%= contact.email %></td></tr>
        <tr><td class="info"><%= number_to_phone(contact.phone) %></td></tr>
        <tr><td class="info"><%= contact.address %></td></tr>
        <td class="link"><%= link_to 'Show', contact %><td>
        <td class="link"><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td class="link"><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</body>
